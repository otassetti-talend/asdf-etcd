#!/usr/bin/env bash

set \
    -o errexit \
    -o nounset \
    -o pipefail

readonly repository="etcd-io/etcd"

cmd="curl -s"
if [ -n "${OAUTH_TOKEN:-}" ]; then
    cmd="$cmd -H 'Authorization: token $OAUTH_TOKEN'"
fi
cmd="$cmd https://api.github.com/repos/$repository/releases"
versions=$(eval $cmd | jq -r '.[].tag_name' | xargs)
echo $versions